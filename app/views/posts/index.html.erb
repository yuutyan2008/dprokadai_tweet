<h1>投稿一覧</h1>
<%= link_to '新規投稿', new_post_path %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.content, post_path(post) %>
      <%= link_to '編集', edit_post_path(post) %> |
      <%= link_to '削除', post_path(post), method: :delete, data: { confirm: '削除してよろしいですか?' } %>
    </li>
  <% end %>
</ul>
